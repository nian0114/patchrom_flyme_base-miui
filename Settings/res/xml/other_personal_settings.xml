<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen
  xmlns:android="http://schemas.android.com/apk/res/android">
    <PreferenceCategory />
    <miui.preference.ValuePreference android:title="@string/locale_settings" android:key="locale_settings" android:fragment="com.android.settings_ex.MiuiLocaleSettings" />
    <PreferenceCategory />
    <Preference android:title="@string/pref_edge_handgrip" android:key="edge_mode_settings" android:fragment="com.android.settings_ex.EdgeModeSettings" />
    <PreferenceScreen android:title="@string/touch_assistant" android:key="touch_assistant">
        <intent android:targetPackage="com.miui.touchassistant" android:action="android.intent.action.TOUCH_ASSISTANT_SETTINGS" />
    </PreferenceScreen>
    <PreferenceScreen android:title="@string/force_touch" android:key="force_touch_settings">
        <intent android:targetPackage="com.android.settings_ex" android:action="android.intent.action.FORCE_TOUCH_GUIDE" />
    </PreferenceScreen>
    <Preference android:title="@string/screenshot" android:key="screenshot_settings" android:fragment="com.android.settings_ex.display.ScreenshotFragment" />
    <Preference android:title="@string/led_settings" android:key="led_settings" android:fragment="com.android.settings_ex.LedSettings" />
    <Preference android:title="@string/music_headset_settings" android:key="headset_settings" android:fragment="com.android.settings_ex.HeadsetSettings" />
    <Preference android:title="@string/key_settings_title" android:key="key_settings" android:fragment="com.android.settings_ex.KeySettings" />
    <Preference android:title="@string/handy_mode" android:key="handy_mode_settings" android:fragment="com.android.settings_ex.display.HandyModeFragment" />
    <Preference android:title="@string/print_settings" android:key="print_settings" android:fragment="com.android.settings_ex.print.PrintSettingsFragment" />
    <Preference android:title="@string/avoid_ui" android:key="avoid_ui">
        <intent android:targetPackage="com.miui.sensor.avoid" android:action="android.intent.action.AVOID_UI_SETTINGS" />
    </Preference>
    <Preference android:title="@string/development_settings_title" android:key="development_settings" android:fragment="com.android.settings_ex.DevelopmentSettings" />
</PreferenceScreen>
